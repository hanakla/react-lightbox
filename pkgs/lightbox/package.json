{
	"name": "@hanakla/react-lightbox",
	"version": "1.0.2",
	"packageManager": "yarn@4.9.3",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"sideEffects": false,
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepublishOnly": "yarn build"
	},
	"devDependencies": {
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"tsup": "8.5.1",
		"typescript": "5.9.3"
	},
	"peerDependencies": {
		"react": "*",
		"react-dom": "*"
	},
	"dependencies": {
		"@use-gesture/react": "^10.3.1",
		"focus-trap-react": "^11.0.6"
	}
}
